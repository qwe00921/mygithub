<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="text_settings_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_settings_title_size</item>
        <item name="android:textColor">@color/global_text_color</item>
    </style>

    <style name="text_settings_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_settings_info_size</item>
        <item name="android:textColor">@color/global_text_info_color</item>
    </style>

    <style name="image_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/image_settings_margin_right</item>
    </style>

    <style name="global_divider">
        <item name="android:background">@color/global_divider_color_1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/global_divider_height</item>
    </style>

    <style name="global_divider_vertical">
        <item name="android:background">@color/global_divider_color</item>
        <item name="android:layout_width">@dimen/global_divider_height</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="global_divider_2">
        <item name="android:background">@color/global_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/global_divider_height</item>
    </style>

    <style name="HomeListPrimaryText">
        <item name="android:textColor">@color/global_lv_primary_text</item>
        <item name="android:textSize">@dimen/home_font_list_primary</item>
    </style>

    <style name="HomeListBingoPrimaryText">
        <item name="android:textColor">@color/main_list_bingo_text_color</item>
        <item name="android:textSize">@dimen/home_font_list_primary</item>
    </style>

    <style name="HomeListPrimaryTextDisabled">
        <item name="android:textColor">@color/global_lv_primary_text_disabled</item>
        <item name="android:textSize">@dimen/home_font_list_primary</item>
    </style>

    <style name="HomeListPrimaryTextDisabledDark">
        <item name="android:textColor">@color/global_lv_primary_text_disabled_dark</item>
        <item name="android:textSize">@dimen/home_font_list_primary</item>
    </style>

    <style name="HomeListPrimaryTextDark">
        <item name="android:textColor">@color/global_lv_primary_text_dark</item>
        <item name="android:textSize">@dimen/home_font_list_primary</item>
    </style>

    <style name="HomeListSecondaryText">
        <item name="android:textColor">@color/global_lv_secondary_text</item>
        <item name="android:textSize">@dimen/home_font_list_secondary</item>
    </style>

    <style name="WaterFallListPrimaryText">
        <item name="android:textColor">@color/global_lv_primary_text</item>
        <item name="android:textSize">@dimen/home_font_list_secondary</item>
    </style>

    <style name="WaterFallListPrimaryTextDisabled">
        <item name="android:textColor">@color/global_lv_primary_text_disabled</item>
        <item name="android:textSize">@dimen/home_font_list_secondary</item>
    </style>

    <style name="HomeListSecondaryTextDark">
        <item name="android:textColor">@color/global_lv_secondary_text_dark</item>
        <item name="android:textSize">@dimen/home_font_list_secondary</item>
    </style>

    <style name="MySettingSecondaryText">
        <item name="android:textColor">@color/my_setting_secondary_text</item>
        <item name="android:textSize">@dimen/my_setting_secondary_text</item>
    </style>

    <style name="MySettingPrimaryText">
        <item name="android:textColor">@color/my_setting_primary_text</item>
        <item name="android:textSize">@dimen/my_setting_primary_text</item>
    </style>

    <style name="MySettingLogout">
        <item name="android:textColor">@color/my_setting_logout</item>
        <item name="android:textSize">@dimen/my_setting_primary_text</item>
    </style>

    <style name="channelsDepotGridsItem">
        <item name="android:layout_width">@dimen/gridview_img_width</item>
        <item name="android:layout_height">@dimen/gridview_img_height</item>
        <item name="android:layout_marginRight">@dimen/channel_depot_grid_item_right</item>
        <item name="android:layout_marginTop">@dimen/channel_depot_grid_item_top</item>
    </style>

    <style name="channelsDepotColumnItem">
        <item name="android:layout_width">@dimen/channel_depot_column_item_width</item>
        <item name="android:layout_height">@dimen/channel_depot_column_item_height</item>
    </style>

    <style name="channeleDepotLable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/channel_depot_lable</item>
    </style>

    <style name="leagueLable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/league_color</item>
    </style>

    <style name="dividerLightColor">
        <item name="android:background">@drawable/divider_light_grey</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="globalMarginWindow">
        <item name="android:layout_marginLeft">@dimen/global_margin_window</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/global_margin_window</item>
        <item name="android:layout_marginRight">@dimen/global_margin_window</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/global_margin_window</item>
    </style>

    <style name="globalMarginWindowLeft">
        <item name="android:layout_marginRight">@dimen/global_margin_window</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/global_margin_window</item>
    </style>

    <style name="channelDepotMarginWindowWithOffset">
        <item name="android:layout_marginLeft">@dimen/global_margin_window</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/global_margin_window</item>
        <item name="android:layout_marginRight">@dimen/global_margin_window</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/global_margin_window</item>
    </style>

    <style name="channelDepotMarginWindow">
        <item name="android:layout_marginLeft">@dimen/channel_depot_margin_window</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/channel_depot_margin_window</item>
        <item name="android:layout_marginRight">@dimen/channel_depot_margin_window</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/channel_depot_margin_window</item>
    </style>

    <style name="articleReportDialog" parent="android:style/Theme.Dialog">

        <!-- Fill the screen -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>