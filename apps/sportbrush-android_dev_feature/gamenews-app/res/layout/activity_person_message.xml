<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/flt_message_headPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="5dip" >

            <ImageView
                android:id="@+id/message_headPhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|center"
                android:src="@drawable/ic_person_default_dark" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|center"
                android:src="@drawable/big_avatar_bg" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llt_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:text="The one"
                android:textColor="@color/global_lv_primary_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="10分钟前"
                android:textColor="@color/global_text_info_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="发的话发送到的发蜀都赋好地方地方的的付电话费了等发的和堕落腐化的路费哈德换发的了粉红色的胡敦煌\n评论内容\n评论内容"
                android:textColor="@color/global_text_info_color"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dip"
            android:background="@drawable/article_list_item_loading_waterfall"
            android:scaleType="fitXY"
            android:src="@drawable/article_list_item_loading_waterfall" />
    </LinearLayout>

    <View
        style="@style/global_divider_2"
        android:layout_marginLeft="37dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" />

</LinearLayout>