<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_person_default_dark" />

            <ImageView
                android:id="@+id/user_logo_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/article_detail_comment_user_logo_border" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1.33dp"
            android:layout_marginLeft="6.67dp"
            android:layout_marginTop="1.33dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/comment_user_default_name"
                android:textColor="@color/article_comment_info"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.67dp"
                android:singleLine="true"
                android:text="一个小时前"
                android:textColor="@color/article_comment_info"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.67dp"
            android:layout_marginTop="1.33dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/like_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/article_detail_comment_like_normal" />

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="234"
                android:textColor="@color/article_comment_info"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41.33dp"
        android:layout_marginTop="6.67dp"
        android:gravity="left"
        android:lineSpacingExtra="3.33dp"
        android:text="评论内容\n评论内容"
        android:textColor="@color/article_detail_comment_primary_text"
        android:textSize="13.33sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10.67dp"
        android:background="@color/article_detail_comment_divider" />

</LinearLayout>