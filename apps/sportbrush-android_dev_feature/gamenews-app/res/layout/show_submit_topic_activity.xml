<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yy.android.gamenews.ui.view.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:background="@color/actionbar_bg"
        app:drawableLeft="@drawable/actionbar_back_selector"
        app:drawableRight="@drawable/actionbar_back_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/submit_topic_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tag_topic_hint"
            android:lineSpacingExtra="3.33dp"
            android:maxLength="140"
            android:minHeight="100dip"
            android:padding="10dp"
            android:textColor="#3c3c3c"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/global_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tag_des_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:layout_marginTop="10dip"
                android:text="140/140"
                android:textColor="#b3a08f"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/submit_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:textColor="#b3a08f"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/submit_topic_small_pic"
                android:layout_width="82dip"
                android:layout_height="82dip"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="10dip"
                android:layout_marginEnd="10dip"
                android:layout_marginRight="10dip"
                android:contentDescription="@string/upload_topic_des"
                android:scaleType="fitCenter" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>